{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "rootDirs": [
      "src"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}